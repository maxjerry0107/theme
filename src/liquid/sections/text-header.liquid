{%- capture section_styles -%}
  {% if section.settings.content_width != blank %}
    max-width: {{ section.settings.content_width }};
  {% endif %}
  {% if section.settings.background_color != blank %}
    background-color: {{ section.settings.background_color }};
  {% endif %}
  {% if section.settings.bg_image != blank %}
    background-image: url('{{ section.settings.bg_image.src | img_url: '2000x'}}');
    background-size: cover;
  {% endif %}
{%- endcapture -%}
{%- capture text_styles -%}
  {% if section.settings.text_color != blank %}
    color: {{ section.settings.text_color }};
  {% endif %}
  {% if section.settings.text_alignment != blank %}
    text-align: {{ section.settings.text_alignment }};
  {% endif %}
{%- endcapture -%}

<div class="text-banner text-banner--page-header">
  {%- if section.settings.heading -%}
    <h1 class="heading--1 text-banner--page-header__heading">{{ section.settings.heading }}</h1>
  {%- endif -%}
  {%- if section.settings.body -%}
    <p class="text-banner--page-header__body">{{ section.settings.body }}</p>
  {%- endif -%}
  {%- if section.settings.sub_heading -%}
    <h5 class="heading--1 text-banner--page-header__sub-heading">{{ section.settings.sub_heading }}</h5>
  {%- endif -%}
</div>
<style type="text/css">
  .text-banner--page-header {
    {{ section_styles }}
  }
  .text-banner--page-header__heading,
  .text-banner--page-header__body,
  .text-banner--page-header__sub-heading {
    {{ text_styles }}
  }
</style>

{% schema %}
  {
    "name": "Text Header",
    "class": "text-banner-section",
    "settings": [
      {
        "type": "header",
        "content": "Color Options"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Section Background Color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Section Text Color",
        "default": "#000000"
      },
      {
        "type": "image_picker",
        "id": "bg_image",
        "label": "Background Image (optional)"
      },
      {
        "type": "header",
        "content": "Content Fields"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "info": "Styled to be all caps, for enter your text normally.",
        "default": "We make your favorite everything"
      },
      {
        "type": "textarea",
        "id": "body",
        "label": "Body",
        "default": "From cutting-edge intimates to luxury-technical ready-to-wear, Commando creates the styles that make you look and feel amazing. From thoughtfully sourcing fabrics to fit testing every style on real bodiesâ€”we care about where and how our garments are made. The result: luxurious, long-lasting, well-fitting garments that make your wardrobe work harder for you."
      },
      {
        "type": "text",
        "id": "sub_heading",
        "label": "Sub Heading",
        "info": "Shows below the body text, Playfair font. (Optional)"
      },
      {
        "type": "text",
        "id": "content_width",
        "label": "Content Max Width",
        "info": "The max width for the hero's content on desktop sized devices. You can use any unit valid in CSS (px, %, vw). Mobile will always display the content as full width. If no value is provided then the width will max out at 872px."
      },
      {
        "type": "header",
        "content": "Alignment"
      },
      {
        "type": "select",
        "id": "text_alignment",
        "label": "Text Align",
        "info": "Applies to both desktop and mobile.",
        "default": "left",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ]
      }
    ],
    "templates": [
      "404",
      "article",
      "blog",
      "collection",
      "customers/account",
      "customers/activate_account",
      "customers/addresses",
      "customers/login",
      "customers/order",
      "customers/register",
      "customers/reset_password",
      "index",
      "page",
      "password",
      "search"
    ],
    "presets": [
      {
        "name": "Text Header",
        "category": "Banner"
      }
    ]
  }
{% endschema %}
