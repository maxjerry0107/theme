{% render 'value-props', wrapperClass: 'value-props--full-width' %}

{% schema %}
{
  "name": "Value Props",
  "class": "value-props-section",
  "tag": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_section",
      "label": "Show this section",
      "default": true
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Power Comes From Within"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description (optional)"
    },
    {
      "type": "checkbox",
      "id": "show_dots",
      "label": "Show Dots (Desktop and Mobile)",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_arrows_desktop",
      "label": "Show Arrows (Desktop Only)",
      "default": true
    },
    {
      "type": "range",
      "id": "slide_to_show_mobile",
      "label": "Slides to show (Mobile)",
      "default": 1.9,
      "step": 0.1,
      "min": 1,
      "max": 3.9
    },
    {
      "type": "range",
      "id": "slide_to_show_desktop",
      "label": "Slides to show (Desktop)",
      "default": 5,
      "step": 1,
      "min": 1,
      "max": 6
    },
    {
      "type": "range",
      "id": "slides_to_scroll",
      "label": "Slides to Scroll at a time (Desktop only)",
      "default": 5,
      "step": 1,
      "min": 1,
      "max": 6
    },
    {
      "type": "checkbox",
      "id": "scroll_loops",
      "label": "Inifinte Scroll (the scroll loops)",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "value_prop",
      "name": "Value Prop",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon_image",
          "label": "Icon Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "templates": [
    "404",
    "article",
    "blog",
    "collection",
    "customers/account",
    "customers/activate_account",
    "customers/addresses",
    "customers/login",
    "customers/order",
    "customers/register",
    "customers/reset_password",
    "index",
    "page",
    "password",
    "search"
  ],
  "presets": [
    {
      "name": "Value Props",
      "category": "Content Blocks",
      "blocks": [
        {
          "type": "value_prop"
        },
        {
          "type": "value_prop"
        },
        {
          "type": "value_prop"
        },
        {
          "type": "value_prop"
        },
        {
          "type": "value_prop"
        }
      ]
    }
  ]
}
{% endschema %}
